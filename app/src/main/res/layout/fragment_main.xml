<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:background="@color/grey_1"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="150dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Page"
                android:textColor="@color/white"
                android:textSize="32dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_frontpagepicture" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to my app Chose down below"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"

                />

            <Button
                android:id="@+id/btn_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/oceanBlue"
                android:text="About"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button

                android:id="@+id/btn_func"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/oceanBlue"
                android:text="Func"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button

                android:id="@+id/btnNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/oceanBlue"
                android:text="News"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Info About House of the dragon"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingHorizontal="75dp"
                android:text="@string/if_daenerys_had_three_dragons_in_game_of_thrones_the_number_of_creatures_present_in_house_of_the_dragon_is_going_to_be_huge_ryan_j_condal_the_tv_show_co_creator_confirmed_at_san_diego_comic_con_last_july_that_no_less_than_17_dragons_would_appear_on_screen_if_we_ve_already_seen_syrax_and_caraxes_others_are_going_to_show_up_during_the_first_and_second_season_of_the_show_since_it_has_already_been_ordered_by_hbo"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_1"
                android:text="@string/dots"
                android:textSize="20dp"
                android:paddingHorizontal="75dp"

                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>